{
  // IMPORTANT: This is the BASE TypeScript configuration shared by all processes
  // DO NOT add DOM or Electron-specific types here!
  //
  // Why separate configs?
  // Electron has 3 different JavaScript environments:
  // 1. Main Process (Node.js) - No DOM access, full Node.js + Electron APIs
  // 2. Renderer Process (Browser) - DOM access, limited Node.js access
  // 3. Preload Scripts - Bridge between main and renderer
  //
  // Each environment needs different type definitions to catch errors at compile time
  // See tsconfig.main.json and tsconfig.renderer.json for environment-specific configs

  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "jsx": "react-jsx",
    "outDir": "../dist",
    "rootDir": "../src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "../src",
    "paths": {
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"],
      "@preload/*": ["preload/*"],
      "@native/*": ["native/*"],
      "@shared/*": ["shared/*"],
      "@/*": ["*"]
    },
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}