{
  "name": "filecataloger",
  "productName": "FileCataloger",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build && electron ./dist/main/index.js",
    "build": "yarn build:renderer && yarn build:preload && yarn build:main",
    "build:main": "webpack --config config/webpack/webpack.main.js",
    "build:renderer": "webpack --config config/webpack/webpack.renderer.js",
    "build:preload": "webpack --config config/webpack/webpack.preload.js",
    "rebuild:native": "electron-rebuild -f -w mouse_tracker_darwin,drag_monitor_darwin",
    "postinstall": "electron-rebuild",
    "clean": "rimraf dist out",
    "start": "electron ./dist/main/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\"",
    "security:check": "eslint src/**/*.{ts,tsx} --plugin security --plugin electron",
    "native:check": "electron-rebuild --check",
    "docs:generate": "typedoc --options ./config/typedoc.json",
    "docs:validate": "typedoc --options ./config/typedoc.json --emit none",
    "deps:check": "yarn audit && depcheck && npx ncu -u --target minor",
    "quality:check": "yarn typecheck && yarn lint && yarn format:check && yarn audit && yarn docs:validate",
    "prepare": "husky",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:dmg": "yarn build && electron-forge make --platform=darwin",
    "dist": "yarn clean && yarn build && yarn make:dmg",
    "dist:mac": "yarn dist",
    "dist:mac:arm64": "yarn build && electron-forge make --platform=darwin --arch=arm64",
    "dist:mac:x64": "yarn build && electron-forge make --platform=darwin --arch=x64"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/electron-store": "^3.2.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "depcheck": "^1.4.7",
    "electron": "^37.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-store": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-electron": "^7.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "framer-motion": "^12.23.12",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "node-abi": "^4.14.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.2",
    "node-loader": "^2.0.0",
    "npm-check-updates": "^18.1.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prebuild-install": "^7.1.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "ts-loader": "^9.5.4",
    "typedoc": "^0.28.13",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1",
    "webpack-merge": "^6.0.1",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
