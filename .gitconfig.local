# Local Git configuration for FileCataloger project
# Include this in your global .gitconfig with:
# [include]
#     path = /path/to/FileCataloger/.gitconfig.local

[alias]
    # Add with automatic code review
    addr = "!sh -c 'cd \"$(git rev-parse --show-toplevel)\" && ./scripts/git-add-with-review.sh \"$@\"' -"

    # Review staged files
    review-staged = "!cd \"$(git rev-parse --show-toplevel)\" && yarn review:staged"

    # Review specific files
    review = "!sh -c 'cd \"$(git rev-parse --show-toplevel)\" && yarn review \"$@\"' -"

    # Stage all with review
    addall = "!cd \"$(git rev-parse --show-toplevel)\" && ./scripts/git-add-with-review.sh --all"

    # Skip review and add (emergency use only)
    addr-skip = "!sh -c 'SKIP_REVIEW=1 git add \"$@\"' -"

    # Show review report
    review-report = "!cd \"$(git rev-parse --show-toplevel)\" && ls -lt .claude/review-reports/ | head -10"

    # Clean review cache
    review-clean = "!cd \"$(git rev-parse --show-toplevel)\" && rm -rf .claude/review-cache/*"

[core]
