#!/usr/bin/env sh

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üöÄ Pre-push hook: Running comprehensive checks..."

# Run full build to ensure everything compiles
echo "üî® Building project..."
if ! yarn build; then
  echo -e "${RED}‚ùå Build failed. Please fix build errors before pushing.${NC}"
  exit 1
fi

# Run all tests if available
echo "üß™ Running tests..."
if yarn test 2>/dev/null; then
  echo -e "${GREEN}‚úÖ Tests passed${NC}"
else
  echo -e "${YELLOW}‚ö†Ô∏è  No test suite configured${NC}"
fi

# Check native modules are built correctly
echo "üîß Validating native modules..."
if ! yarn test:native:validate 2>/dev/null; then
  echo -e "${YELLOW}‚ö†Ô∏è  Native module validation skipped or failed${NC}"
fi

echo -e "${GREEN}‚úÖ Pre-push checks completed successfully!${NC}"
