#!/usr/bin/env sh

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "ğŸš€ Pre-push hook: Running comprehensive checks..."

# Run full build to ensure everything compiles
echo "ğŸ”¨ Building project..."
if ! yarn build; then
  echo -e "${RED}âŒ Build failed. Please fix build errors before pushing.${NC}"
  exit 1
fi

# Run all tests if available
echo "ğŸ§ª Running tests..."
if yarn test 2>/dev/null; then
  echo -e "${GREEN}âœ… Tests passed${NC}"
else
  echo -e "${YELLOW}âš ï¸  No test suite configured${NC}"
fi

# Check native modules are built correctly
echo "ğŸ”§ Validating native modules..."
if ! yarn native:check; then
  echo -e "${RED}âŒ Native module check failed${NC}"
  exit 1
fi

# Run security audit
echo "ğŸ” Running security audit..."
if ! yarn security:check; then
  echo -e "${YELLOW}âš ï¸  Security warnings detected. Review before pushing.${NC}"
fi

# Validate documentation
echo "ğŸ“š Validating documentation..."
if ! yarn docs:validate; then
  echo -e "${YELLOW}âš ï¸  Documentation issues detected${NC}"
fi

echo -e "${GREEN}âœ… Pre-push checks completed successfully!${NC}"